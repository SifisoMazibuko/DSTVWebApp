@model DSTVWebApp.Models.Show

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br/>
<h2>Show Details</h2>

<section class="col-sm-4">
    <div>   
        @{
            var base64 = Convert.ToBase64String(Model.ShowImage);
            var showImage = string.Format("data:image/png;base64,{0}", base64);
        }
        <img src="@showImage" style="max-height:700px;max-width:800px;" />     
    </div>
    <h3>@Html.DisplayFor(model => model.ShowName) </h3>
    <br/><br/>
    <p>
        <div class="glyphicon glyphicon-backward">
            @Html.ActionLink("Back", "Index")
        </div>
       
    </p>
</section>
<div class="col-sm-1"></div>
<section class="col-sm-6">
    <div style="font-size:20px">
        @Html.DisplayFor(model => model.ShowDescription)
    </div>
    <br/>
    <label class="control-label">ChannelName</label>
    <p>@Html.DisplayFor(model => model.ChannelName) </p>
    <label class="control-label">Channel</label>
    <p>@Html.DisplayFor(model => model.Channel) </p>
    <label class="control-label">Genre</label>
    <p>@Html.DisplayFor(model => model.Genre) </p>
    <label class="control-label">Duration</label>
    <p>@Html.DisplayFor(model => model.Duration) </p>
    <label class="control-label">Age Restriction:</label>
    <p>@Html.DisplayFor(model => model.AgeRestriction) </p>
    
</section>