@model IEnumerable<DSTVWebApp.Models.Show>

@{
    ViewBag.Title = "SeriesCalendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style type="text/css">
        .picture {
            position: relative;
            background-size: cover;
            background-repeat: no-repeat;
            height: 400px;
            width: 450px;
        }
        .boxx {
            border: 1px solid thin #c1c1c1;
            background-color: #f5f5f5;
            height: 200px;
            max-width: 450px;
            font-size: 20px;
            color: #0c74f3;
        }
        .boxx:hover {
            background-color: #0c74f3;
            font-size: 20px;
            color: white;
        }    
    </style>
</head>

<br />
<h1 style="color:#0c74f3">Series</h1>

@foreach (var item in ViewBag.seriesCalendar)
{
    <div style="display:inline-block">
        @{
            var base64 = Convert.ToBase64String(item.ShowImage);
            var showImage = string.Format("data:image/png;base64,{0}", base64);
        }
        <a href="@Url.Action("Details", "Home", new { id = item.ShowName })">
            <img src="@showImage" class="picture" />
            <div class="boxx">
                <h2>@item.ShowName</h2>
                <p>@item.StartDate.ToString("ddd d MMM, hh:mm")</p>
                <p> @item.ChannelName (@item.Channel)</p>
            </div>
        </a>        
    </div>
}

