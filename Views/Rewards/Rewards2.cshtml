@model IEnumerable<DSTVWebApp.Models.Rewards>

@{
    ViewBag.Title = "Rewards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .picture {
            position: relative;
            background-size: cover;
            background-repeat: no-repeat;
            height: 400px;
            width: 450px;
        }

        .box {
            border: 1px solid thin #c1c1c1;
            background-color: #f5f5f5;
            height: 100px;
            max-width: 450px;
            font-size: 20px;
            color: #0c74f3;
        }

            .box:hover {
                background-color: #0c74f3;
                font-size: 20px;
                color: white;
            }
    </style>
</head>
<body>
    <br />
    <br />
    @foreach (var item in ViewBag.rw)
    {
        <h2 style="color:#219ffa">@item.RewardName</h2>
        <div style="display:inline-block">
            @{
                var base64 = Convert.ToBase64String(item.Image);
                var Image = string.Format("data:image/png;base64,{0}", base64);
            }
            <a href="@Url.Action("RewardDetails", "Rewards", new { searchString = item.RewardName })">
              
                <img src="@Image" class="picture" />
            </a>
            <br />
            <div class="box">
                @*<p>Closing Date: @item.ClosingDate.ToString("dd MMM yyyy")</p>*@
                <p>@item.Description</p>
            </div>
        </div>
                }
</body>
