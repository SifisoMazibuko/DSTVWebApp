@model  DSTVWebApp.Models.Rewards

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Available Rewards</h2>

<button class="btn btn-default" id="btnAddProduct">
    @Html.ActionLink("Add New", "Create", new { style = "color:#0094ff" })
</button><br/>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RewardName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClosingDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in ViewBag.rewards) {
    var base64 = Convert.ToBase64String(item.Image);
    var Image = string.Format("data:image/png;base64,{0}", base64);
    <tr>
        <td>
            @item.RewardName
        </td>
        <td>
            @item.Description
        </td>
        <td>
            <img src="@Image" style="max-height:150px;max-width:150px;" />      
        </td>
        <td>
            @item.ClosingDate
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RewardsID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RewardsID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RewardsID })
        </td>
    </tr>
}

</table>
