@model IEnumerable<DSTVWebApp.Models.Rewards>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>Rewards</title>
    <style>
        .picture {
            position: relative;
            background-size: cover;
            background-repeat: no-repeat;
            height: 300px;
            width: 450px;
        }

        .box {
            border: 1px solid thin #c1c1c1;
            background-color: #f5f5f5;
            height: 100px;
            max-width: 450px;
            font-size: 20px;
            color: #0c74f3;
        }

            .box:hover {
                background-color: #0c74f3;
                font-size: 20px;
                color: white;
            }

        #right {
            margin-left: 20px;
            margin-top: 20px;
            display: inline;
        }
    </style>
  
</head>
<body>
    <br/>
    <br/>
    <h1 style="margin-left:20px;margin-top:30px;color:#219ffa">Rewards</h1>
    @foreach (var item in Model)
    {        
        <div style="display:inline-block;background-color:#f5f5f5">
            @{
                var base64 = Convert.ToBase64String(item.Image);
                var Image = string.Format("data:image/png;base64,{0}", base64);
            }
            @*<a href="@Url.Action("MoreDetails", "MoreDetails", new { id = item.RewardsID })">
                <img src="@Image" class="picture" />
            </a>*@
            <a href="@Url.Action("MoreDetails", "MoreDetails", new { id =item.RewardsID})">
                <img src="@Image" class="picture" />
            </a>
            @*<a href="@Html.ActionLink("MoreDetails", "MoreDetails", new { id = item.RewardsID })"><img src="@Image" class="picture" /></a>*@
            @*@Html.ActionLink("MoreDetails", "MoreDetails", new { id = item.RewardsID })*@
            <br />
            <div class="box">
                @*<p>Closing Date: @item.ClosingDate.ToString("dd MMM yyyy")</p>*@
                <h2>@item.RewardName</h2>
                @*<p>@item.Description</p>*@
            </div>
        </div>
      }
</body>
</html>
