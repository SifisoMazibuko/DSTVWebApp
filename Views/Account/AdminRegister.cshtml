                @*@Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-offset-2 col-md-10">
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control resize", placeholder = "ConfirmPassword" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-lg btn-primary" style="width:10%">
                         <span class="glyphicon glyphicon-user"> Register</span>
                    </button>
                </div>
            </div>
        </div>
    }
    
    @*<div>
        @Html.ActionLink("Back to List", "Index")
